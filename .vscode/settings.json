{
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,

  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "editor.formatOnPaste": true,
  "editor.formatOnType": false,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "biome.enabled": true,

  "eslint.enable": true,
  "eslint.useFlatConfig": true
}
